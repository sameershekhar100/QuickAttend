<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.teacherRegisterActivity">

    <TextView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register Teacher"
        android:textSize="32sp"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/teacher"
        android:layout_marginBottom="32dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/add_newTeacher"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:paddingLeft="30dp"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:background="@drawable/btn_radius"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="enter your full name"
            android:inputType="textPersonName"
             />



        <EditText
            android:id="@+id/teacherEmail"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:paddingLeft="30dp"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:background="@drawable/btn_radius"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="email address"
            android:inputType="textEmailAddress"
             />

        <EditText
            android:id="@+id/teacherPassword"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:paddingLeft="30dp"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:background="@drawable/btn_radius"
            android:layout_marginBottom="30dp"
            android:ems="10"
            android:hint="password"
            android:inputType="textPassword"
             />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/addtaskprogressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible" />

    <Button
        android:id="@+id/registerTeacher"
        android:layout_width="225dp"
        android:layout_height="68dp"
        android:layout_gravity="center"
        android:padding="10dp"
        android:background="@drawable/btn_radius"
        android:text="Register"
        android:textSize="19dp" />
</LinearLayout>